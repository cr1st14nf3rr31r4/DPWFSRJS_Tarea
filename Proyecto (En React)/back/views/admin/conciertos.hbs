<div class="container" style="margin-top: 40px; margin-bottom: 20px">
    <div class="row justify-content-center">
        <div class="signout_box">
            <p>Hola {{usuario}}!</p>
            <a class="signout" href="/admin/login/logout">Cerrar sesi√≥n <i class="fa fa-sign-out"></i></a>
        </div>
    </div>

    <div class="row" style="margin-bottom: 10px">
        <div class="col-7">
            <h4>Agenda de Conciertos</h4>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/conciertos/nuevo"><i class="fa fa-plus" aria-hidden="true"></i>
                Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-dark table-bordered">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Dia</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Grupo</th>
                        <th scope="col">Lugar</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Tickets</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each conciertos}}
                    <tr class="text-center">
                        <th scope="row">{{id}}</th>
                        <td>{{dia}}</td>
                        <td>{{hora}}</td>
                        <td>{{grupo}}</td>
                        <td>{{lugar}}</td>
                        <td>{{direccion}}</td>
                        <td>{{tickets}}</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" href="/admin/conciertos/modificar/{{id}}"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary btn-sm" href="/admin/conciertos/eliminar/{{id}}"><i
                                    class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>